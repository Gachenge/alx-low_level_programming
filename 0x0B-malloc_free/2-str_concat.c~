#include "main.h"
#include <stdlib.h>

/**
 * str_concat - concantenate two strings
 * @s1: first string
 * @s2: second string
 * Return: zero
 */

char *str_concat(char *s1, char *s2)
{
	char *str;
	int i, j, k;

	if (s1 == NULL || s2 == NULL)
		return (NULL);

	for (i = 0; s1[i] != '\0'; i++)
		;
	for (j = 0; s2[j] != '\0'; j++)
		;
	str = malloc(sizeof(char) * (i + j));

	if (str == '\0')
		return (NULL);
	for (k = 0; s1[k] != '\0'; k++)
		if (k == i)
			str = s1 + s2;
	return (str);
}
