#include "main.h"
#include <stdlib.h>

/**
 * _strdup - return pointer to a new string
 * @str: string
 * Return: zero
 */

char *_strdup(char *str)
{
	char *s;
	int i, length;

	if (str == NULL)
		return (NULL);

	for (i = 0; str[i] != 0; i++)
	{
		length++;
		str++;
	}
	s = malloc(sizeof(char) * length);

	if (s == NULL)
		return (NULL);

	for (i = 0; i < length; i++)
		s[i] = str;
	return (s);
}
